{
  "name": "TwitterCMS",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.jsx",
  "scripts": {
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:js && sass --watch sass:dist/css",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "start": "nodemon server.js",
    "mkdir": "mkdir -p dist && mkdir -p dist/css",
    "clean": "rm -rf dist",
    "build:html": "npm run clean:html && cp index.html dist",
    "watch:html": "npm run build:html && chokidar index.html -c 'npm run build:html'",
    "clean:html": "rm -f dist/index.html",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f dist/bundle.js dist/bundle.js.map",
    "clean:css": "rm dist/css/main.css",
    "watch:css": "sass sass:dist/css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.10.4",
    "express": "^4.14.0",
    "firebase": "^3.1.0",
    "mongoose": "^4.5.3",
    "react": "^15.2.1",
    "react-addons-update": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "twit": "^2.2.4"
  },
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "css-loader": ">=0.23.1",
    "image-loader": "0.0.1",
    "img-loader": "^1.3.1",
    "node-sass": ">=3.7.0",
    "sass-loader": ">=3.2.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
